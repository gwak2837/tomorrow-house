{
  "env": {
    "browser": true,
    "es2022": true,
    "node": true
  },
  "extends": ["eslint:recommended", "next/core-web-vitals", "prettier"],
  "rules": {
    "no-console": ["warn", { "allow": ["warn", "error"] }],
    "no-undef": "warn",
    "no-unused-vars": ["warn", { "varsIgnorePattern": "^_" }],
    "prefer-const": "off",

    "react/display-name": "off"
  }
}
